<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.soft.ware.rest.modular.owner.dao.TOwnerMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.soft.ware.rest.modular.owner.model.TOwner">
        <id column="phone" property="phone" />
        <result column="id" property="id" />
        <result column="name" property="name" />
        <result column="address" property="address" />
        <result column="description" property="description" />
        <result column="video_url" property="videoUrl" />
        <result column="begin_time" property="beginTime" />
        <result column="end_time" property="endTime" />
        <result column="default_desc" property="defaultDesc" />
        <result column="default_refund_reason" property="defaultRefundReason" />
        <result column="create_time" property="createTime" />
    </resultMap>
    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, name, phone, address, description, video_url AS videoUrl, begin_time AS beginTime, end_time AS endTime, default_desc AS defaultDesc, default_refund_reason AS defaultRefundReason, create_time AS createTime
    </sql>
    <sql id="t_owner_alias_columns">
        w.id,w.name,w.phone,w.address,w.description,w.video_url,w.begin_time,w.end_time,w.default_desc,w.default_refund_reason,DATE_FORMAT(w.create_time,'%Y-%m-%d %H:%i:%s') create_time
    </sql>
    <select id="findMap" resultType="java.util.Map">
        select
        <include refid="t_owner_alias_columns"/>
        from t_owner w where true
        <if test="map.id != null and map.id != ''">
            and w.id = #{map.id}
        </if>
    </select>

</mapper>
